# FinBot Configuration Template
# Copy this to .env and fill in your values

# ==================== API Configuration ====================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# ==================== LLM Configuration ====================

# Set to true to use OpenAI, false to use HuggingFace
USE_OPENAI=false

# OpenAI Configuration (required if USE_OPENAI=true)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# HuggingFace Configuration (used if USE_OPENAI=false)
# Options: mistralai/Mistral-7B-Instruct-v0.1, meta-llama/Llama-2-7b, etc.
HF_MODEL_NAME=mistralai/Mistral-7B-Instruct-v0.1
HF_API_TOKEN=your_huggingface_token_here

# ==================== Embedding Model ====================
# SentenceTransformers model: https://www.sbert.net/docs/pretrained_models.html
EMBEDDING_MODEL=all-MiniLM-L6-v2

# ==================== FAISS Configuration ====================
FAISS_INDEX_PATH=embeddings/faiss_index

# ==================== RAG Configuration ====================
# Text chunking
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# Retrieval
TOP_K_DOCUMENTS=5

# ==================== Documents Configuration ====================
DOCUMENTS_PATH=data/documents
ALLOWED_EXTENSIONS=pdf,txt

# ==================== Logging ====================
LOG_LEVEL=INFO
LOG_PATH=logs/finbot.log

# ==================== Model Configuration ====================
# Device: cpu or cuda
DEVICE=cpu

# Generation parameters
MAX_TOKENS=512
TEMPERATURE=0.7

# ==================== Fine-tuning Configuration ====================
FINETUNE_EPOCHS=3
FINETUNE_BATCH_SIZE=8
FINETUNE_LEARNING_RATE=2e-4

# ==================== Streamlit Configuration ====================
STREAMLIT_PORT=8501
STREAMLIT_THEME=light
