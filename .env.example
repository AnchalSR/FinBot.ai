# Set to true to use OpenAI API (requires OPENAI_API_KEY)
USE_OPENAI=false

# Device for model inference: cpu or cuda
DEVICE=cpu

# HuggingFace model name
HF_MODEL_NAME=mistralai/Mistral-7B-Instruct-v0.1

# Embedding model for vector search
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Chunk size for document processing
CHUNK_SIZE=500

# Number of top documents to retrieve for context
TOP_K_DOCUMENTS=5

# HuggingFace API token (get from https://huggingface.co/settings/tokens)
HF_TOKEN=your_huggingface_token_here

# Optional: OpenAI API key (if USE_OPENAI=true)
# OPENAI_API_KEY=your_openai_api_key_here
